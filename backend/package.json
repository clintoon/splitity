    "lodash": "^4.17.11",
    "nodegit": "^0.24.3",
    "supertest": "^4.0.2",
    "typescript": "^3.4.5"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "husky": ">=1",
    "lint-staged": ">=8",
